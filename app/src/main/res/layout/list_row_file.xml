<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/layoutQusImg">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layoutDateTime"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:id="@+id/layoutCount">

            <TextView
                android:id="@+id/bgCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:text="00"
                android:background="@drawable/circle_blue"
                android:layout_centerVertical="true"
                android:textColor="@android:color/transparent"
                android:padding="12dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvNumberOfDocuments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:text="0"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:padding="12dp"
                android:textSize="18sp" />

            </RelativeLayout>

            <!--<ImageView-->
            <!--android:id="@+id/imgComment"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:src="@drawable/ic_comment_white"-->
            <!--android:adjustViewBounds="true"-->
            <!--android:layout_margin="12dp"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_toRightOf="@+id/tvNumberOfComments"-->
            <!--android:scaleType="fitCenter"/>-->

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/layoutCount"
                android:layout_toLeftOf="@+id/imgStatus"
                android:id="@+id/layoutCard">
                <TextView
                    android:id="@+id/tvFileTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Title"
                    android:textStyle="bold"
                    android:layout_toLeftOf="@+id/tvTime"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="5dp"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvFileTitle"
                    android:layout_margin="5dp"
                    android:text="User Name"
                    android:textColor="@color/secondary_text_color"
                    android:textSize="12sp" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/imgStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_done_black"
                android:padding="6dp"
                android:adjustViewBounds="true"
                android:layout_margin="12dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:scaleType="fitCenter"/>

        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="vertical"
        android:background="@color/light_gray"
        android:layout_below="@+id/layoutQusImg"/>

</RelativeLayout>